<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEDC1">
    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/set"
        android:padding="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:src="@drawable/home1"
        android:scaleType="fitXY"
        android:layout_marginBottom="268dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/connect_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:lottie_loop="true"
        app:lottie_fileName="data.json"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="@id/iv"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:src="@drawable/home3"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/iv_connect_btn"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn"
        app:layout_constraintRight_toRightOf="@id/iv_connect_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connected"
        android:layout_width="190dp"
        android:layout_height="272dp"
        android:src="@drawable/home2"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_connect_btn"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_vpn_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:background="#82FFFFFF"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_set">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/fast"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Super Fast Server"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="6dp"
            android:layout_height="8dp"
            android:src="@drawable/right"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>